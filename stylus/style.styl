body 
    font-family: 'Lucida Grande', Verdana, Arial, Sans-Serif
    background-color:white


input 
    -webkit-appearance: none
    -moz-appearance: none
    font-size: 1em
    background-color: white
    border: 1px solid black
    padding: .5em
    margin: 1em 0
    transition-duration: .2s


label 
    margin: auto

table 
    font-size: 14px
    margin: 0.875em auto


td 
    padding: 0 .5em

#logo > img 
    display: block
    width: 200px
    margin: auto


#app 
    display: flex
    flex-flow: row wrap
    justify-content: center
    margin: 1em 0em


#search 
    margin: auto
    max-width: 300px
    display: flex
    flex-flow: column wrap


#enviar 
    height: 2rem

.a 
    border: 1px dotted red

.card 
    background-color: whitesmoke
    width: 500px
    margin: 0.5em
    transition-duration: .2s
    box-shadow: 5px 5px 5px 0px rgba(0, 0, 0, 0.30)
    &:hover 
        border: none
        transform: translateY(-.2em)
        box-shadow: 10px 10px 5px 0px rgba(0, 0, 0, 0.30)

.title 
    display: flex
    flex-flow: row wrap
    justify-content: space-between
    height: 7em
    color: white
    background-color: white
    background-position: center
    background-size: cover
    background-repeat: no-repeat
    backdrop-filter: blur(10px)


.square 
    min-width: 50px
    color: white
    padding: 5px


.square__red 
    background-color: rgba(0, 0, 0, 0)
    display: none


.square__black 
    background-color: #282C35


.gp 
    color: white
    background-color: #282C35
    margin: auto
    padding: .5em


.race 
    font-size: 1em
    font-weight: bold
    text-transform: uppercase


.circuit 
    color: white
    font-size: .875em
